<Application
    x:Class="AntiPlagiatus.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:resources="using:AntiPlagiatus.Views.Resources">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Views/Resources/Themes/DarkTheme.xaml" />
                <ResourceDictionary Source="ms-appx:///Views/Resources/Themes/MainTheme.xaml" />
                <ResourceDictionary>
                    <resources:LocalizedStrings x:Key="LocalizedStrings"/>
                </ResourceDictionary>
                <ResourceDictionary Source="ms-appx:///Helpers/Dialogs/ReportPreviewDialog.xaml"/>
                <ResourceDictionary Source="ms-appx:///Helpers/Dialogs/AddFiltersDialog.xaml"/>
                <ResourceDictionary Source="ms-appx:///Helpers/UIControls/GridSplitter/GridSplitter.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
